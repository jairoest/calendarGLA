<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketOne.Views.CategoriaView"
             xmlns:vm="clr-namespace:PocketOne.ViewModels"
             xmlns:sf="clr-namespace:Syncfusion.Maui.DataForm;assembly=Syncfusion.Maui.DataForm"
             x:DataType="vm:CategoriaViewModel"
             Title="Categoria">
    <VerticalStackLayout>
        <sf:SfDataForm DataObject="{Binding CategoriaDetails}" />
        <Button Text="Guardar" Command="{Binding SaveCommand}"/>
    </VerticalStackLayout>
</ContentPage>